<%= simple_form_for @new_category, html: { class: "form-inline" }, wrapper: :inline_form  do |f| %>
    <%= f.input :name, autofocus: true, label: false, placeholder: "Category name" %>
  <div class="pull-right">
    <%= f.submit "Add category", class: "btn btn-success" %>
  </div>
<% end %>

<br>
<div class="categories">
  <div class="row">
    <%= render @categories %>
  </div>
</div>
