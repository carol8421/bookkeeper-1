<div class="btn-group">
  <button type="button" class="btn btn-default btn-lg dropdown-toggle" data-toggle="dropdown">
    <%= category.name %>
    <span class="badge"><%= spendings_sum_all_month(category) %></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to "Go to category", category %></li>
    <li><%= link_to "Edit category name #{icon("pencil")}".html_safe, edit_category_path(category) %></li>
    <li class="divider"></li>
    <li><%= link_to "Delete category #{icon("trash")}".html_safe, category_path(category), data: { confirm: "Are you sure?" }, method: :delete %></li>
  </ul>
</div>
