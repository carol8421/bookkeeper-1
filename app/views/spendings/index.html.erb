<%= simple_form_for @new_spending, html: { class: "form-inline" }, wrapper: :inline_form do |form| %>
  <% form.error_notification  %>
  <%= render "form", form: form %>
  <div class="pull-right">
    <%= form.submit "Provide spending", class: "btn btn-success" %>
  </div>
<% end %>

<br />

<table class="table table-bordered" id="">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Name</th>
      <th>Category</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
  <%= render @spendings %>
  </tbody>
</table>
