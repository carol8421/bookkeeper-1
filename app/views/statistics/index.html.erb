<h3 class="text-center">Statistics</h3>
<div class="row">
  <div class="col-md-12">
    <h4 class="text-center">Spendings by categories</h4>
    <%= pie_chart @categories_chart, height: "450px;" %>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <h4 class="text-center">Spendings by date</h4>
    <%= line_chart current_user.spendings.group(:created_at).count %>
  </div>
  <div class="col-md-6">
    <h4 class="text-center">Spendings by day of week</h4>
    <%#= bar_chart current_user.spendings.group_by_day_of_week(:created_at, format: "%a").count %>
    <%#= bar_chart Category.group(:name).spendings.group_by_day_of_week(:created_at).sum(:amount)  %>
  </div>
</div>
