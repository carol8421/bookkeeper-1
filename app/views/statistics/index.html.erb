<div class="row">
<h3 class="page-header">
  <span>
    <select class="form-control" name="year" id="year-select" onchange="" size="1">
      <option selected value="" disabled><%= @year %></option>
      <% [2016, 2017, 2018, 2019].each do |year| %>
        <% if year != @year %>
          <option value="<%= year %>"><%= year %></option>
        <% end %>
      <% end %>
    </select>
  </span>
</h3>

<%= render partial: "partial/head" %>
<div class="col-md-12 text-center">
  <h4 class="text-center">Spendings by category</h4>
  <%#= pie_chart @categories_chart, adapter: "highcharts", height: "450px;" %>
  <%= pie_chart @categories_chart %>
</div>
</div>
<br />
<div class="row">
  <div class="col-md-6">
    <h4 class="text-center">Spendings by date</h4>
    <%= line_chart current_user.spendings.group(:created_at).sum(:amount) %>
  </div>
  <div class="col-md-6">
    <h4 class="text-center">Spendings by day of week</h4>
    <%#= bar_chart current_user.spendings.group_by_day_of_week(:created_at, format: "%a").count %>
    <%#= bar_chart Category.group(:name).spendings.group_by_day_of_week(:created_at).sum(:amount)  %>
    <%#= line_chart current_user.spendings.group(:created_at).sum(:value) %>
  </div>
</div>
<br />
